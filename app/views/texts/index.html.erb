<h1>Listing texts</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Detected Language</th>
    <th colspan="3"></th>    
  </tr>

<% @texts.each do |text| %>
  <tr>
    <td><%= text.content %></td>
    <td><%= text.language %></td>
    <td><%= link_to 'Show', text %></td>
    <td><%= link_to 'Edit', edit_text_path(text) %></td>
    <td><%= link_to 'Delete', text, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Text', new_text_path %>
